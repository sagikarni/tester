{
  "name": "tera-repo",
  "private": true,
  "repository": "https://github.com/sagikarni/tera.git",
  "author": "Shlomi Levi <wizardnet972@gmail.com>",
  "contributors": [
    "Shlomi Levi <wizardnet972@gmail.com>"
  ],
  "scripts": {
    "preinstall": "rm node_modules -rf && lerna exec \"rm node_modules -rf\" && del package-lock.json /s",
    "postinstall": "npm run bootstrap",
    "bootstrap": "lerna bootstrap --hoist",
    "watch": "lerna run --parallel --stream watch",
    "watch:admin": "lerna run --parallel --stream --scope admin-* watch",
    "watch:tera": "lerna run --parallel --stream --scope tera.com-* watch",
    "build:server": "lerna run build --scope tera.com-server --stream",
    "build:admin": "lerna run build --scope admin-* --stream",
    "build:tera": "lerna run build --scope tera.com-* --stream",
    "format": "prettier --write \"{app,__{tests,mocks}__}/**/*.js\"",
    "deploy": "bash ./scripts/deploy.sh",
    "deploy:tera": "bash ./scripts/deploy.sh --target tera",
    "deploy:admin": "bash ./scripts/deploy.sh --target admin",
    "login": "bash ./scripts/login.sh",
    "commit": "npx git-cz",
    "prettier": "prettier --write *.js **/*.js **/*.ts **/*.tsx",
    "//": "lerna run watch --paraell --stream"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "commitizen": "^3.1.1",
    "cz-customizable": "^6.0.0",
    "cz-emoji": "^1.1.2",
    "cz-lerna-changelog": "^2.0.2",
    "husky": "^1.3.1",
    "lerna": "^3.13.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3"
  },
  "config": {
    "cz-emoji": {
      "types": [
        {
          "name": "feat \t\tðŸŒŸ  A new feature",
          "value": ":star2:"
        },
        {
          "name": "fix \t\tðŸž  A bug fix",
          "value": ":beetle:"
        },
        {
          "name": "test \t\tðŸš“  Testing improved with new or fixed tests",
          "value": ":police_car:"
        },
        {
          "name": "chore \tðŸ”©  Doesn't modify src or test files",
          "value": ":nut_and_bolt:"
        },
        {
          "name": "style \tâœï¸  Doesn't affect the meaning of the code (white-space, semi-colons, etc)",
          "value": ":pencil2:"
        },
        {
          "name": "docs \t\tðŸ“š  Documentation change",
          "value": ":books:"
        },
        {
          "name": "refactor \tðŸŽ¨  Neither fixes a bug nor adds a feature",
          "value": ":art:"
        },
        {
          "name": "perf \t\tðŸ’°  Improves performance with this change",
          "value": ":moneybag:"
        },
        {
          "name": "build \tðŸš€  Build system config or external dependencies ($compile)",
          "value": ":rocket:"
        },
        {
          "name": "ci \t\tðŸš¥  CI config files and scripts ($arch)",
          "value": ":traffic_light:"
        },
        {
          "name": "revert \tðŸ’Š  Reverts a previous commit",
          "value": ":pill:"
        }
      ],
      "scopes": [
        "$arch",
        "$compile",
        "$contrib",
        "$core",
        "$data",
        "$ui"
      ],
      "path": "./node_modules/cz-emoji"
    },
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run prettier",
      "git add"
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "vue",
      "ts",
      "tsx"
    ],
    "transform": {
      "^.+\\.vue$": "vue-jest",
      ".+\\.(css|styl|less|sass|scss|svg|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "^.+\\.tsx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "snapshotSerializers": [
      "jest-serializer-vue"
    ],
    "testMatch": [
      "**/tests/unit/**/*.spec.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx)"
    ],
    "testURL": "http://localhost/",
    "globals": {
      "ts-jest": {
        "babelConfig": true
      }
    }
  }
}
