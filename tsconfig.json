{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "baseUrl": ".",
    "lib": ["es2015"],
    "paths": {
      "@server/*": ["server/*"],
      "@modules/*": ["server/modules/*"],
      "@/*": ["client/src/*"],
      "@config/*": ["client/src/config"]
    },
    "types": ["greensock", "node"]
  },
  "exclude": [
    "node_modules",
    "node_modules/**/*.*",
    "dist",
    "client",
    "server/**/*.spec.ts",
    "server/**/*.e2e.ts"
  ]
}
